  Plug 'habamax/vim-alchemist' " Dark background
  Plug 'aos/vim-aeon' " Light background
  Plug 'aos/vim-ascetic' " monochrome
  " Plug '~/src/vim-ascetic'
call plug#end()

if (has("termguicolors"))
  set termguicolors
