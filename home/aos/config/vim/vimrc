set smartcase

inoremap jk <Esc>

noremap H ^
nnoremap L $
onoremap L $
vnoremap L g_

nnoremap <expr> <silent> k v:count == 0 ? 'gk' : 'k'
nnoremap <expr> <silent> j v:count == 0 ? 'gj' : 'j'

nnoremap <silent> <Esc> :noh<CR><Esc>
nnoremap <BS> <C-^>
nnoremap <C-p> <Tab>

set path+=**

set nocp

set background=dark
syntax off
filetype plugin indent on

