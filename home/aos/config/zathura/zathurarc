# Colorscheme
include ./colorscheme

# Other
set font                "monospace 12"
set selection-clipboard "clipboard"

set guioptions ""

set window-title-basename     true
set window-title-home-tilde   true
set window-title-page         true

set adjust-open               width

# Remap dual page view, action: `toggle_page_mode`
unmap d
map <A-P> toggle_page_mode

# Rebind dark mode (recolor) to the same as Dark Reader: Alt + Shift + D
map <A-D> recolor
